@model UserToLoginViewModel
@{
}
<div class="container">
        <main role="main" class="pb-3">
   <div class="auth-panel">
       <div class="auth-panel-inner">
           <div style="display:flex; justify-content:space-between; align-items:center; height:100px">
               <h2>Login here...</h2>
               <div><a asp-action="Index" asp-controller="Home">back to home</a></div>
           </div>
     <div asp-validation-summary="All"></div>
     <form method="Post" asp-action="Login" asp-controller="Account">
     
      <p/> <input asp-for="Email" placeholder="Email" autocomplete="off"/></p>
      <p/> <input asp-for="Password" placeholder="Password" autocomplete="off"/></p>
      <div style="height:100px;" class="flex-btw">
          <div><input asp-for="RememberMe"/>Remember Me</div>
          <div><a asp-action="forgot-password" asp-controller="Account">Forgot Password?</a></div>
      </div>
      
      <button type="submit" class="btn btn-primary">Send</button>
     </form>
     <p>
         Don't have an Account? <a asp-action="Register" asp-controller="Account">Register here</a>
     </p>
       </div>
   </div>
        </main>
    </div>